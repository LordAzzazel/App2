<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Views.MyListPageDetail">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center">
            <Label x:Name="MyItemNameShow" HorizontalTextAlignment="Center" FontSize="24" />
            <Label x:Name="MyBody" HorizontalTextAlignment="Center" FontSize="15"/>
            <Image x:Name="MyImage" HeightRequest="300" WidthRequest="300"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>